issn = {14350629},
journal = {Ecosystems},
keywords = {community ecology,ecosystem,food web,population models,predator–prey interactions,vegetation patterns},
number = {2},
pages = {284--300},
publisher = {Springer US},
title = {{Spatially Explicit Modeling in Ecology: A Review}},
volume = {20},
