file = {:C$\backslash$:/Users/Nora.Familie-PC/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Burton et al. - 2015 - Wildlife camera trapping A review and recommendations for linking surveys to ecological processes.pdf:pdf},
